<html lang="en">

<head>
    <meta charset="UTF-8">
    <link type='text/css' rel='stylesheet' href='/css/styleDashboard.css' />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/c3/0.4.10/c3.min.css">

    <script src="http://d3js.org/d3.v3.min.js" charset="utf-8"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/c3/0.4.10/c3.min.js"></script>
    <title>Document</title>

    <style>
        input[type=text] {
        width: 40%;
        padding: 12px 20px;
        margin: 8px 0;
        margin-left: 10px;
        box-sizing: border-box;
        border: 3px solid #ccc;
        -webkit-transition: 0.5s;
        transition: 0.5s;
        outline: none;
        }

        input[type=text]:focus {
        border: 3px solid #555;
        }

        .btn  {
        background-color: #4CAF50; /* Green */
        border: none;
        color: white;
        padding: 16px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        transition-duration: 0.4s;
        cursor: pointer;
        }

        .btn btn-dark {
        background-color: white; 
        color: black; 
        border: 2px solid #4CAF50;
        }

        .btn btn-dark:hover {
        background-color: #4CAF50;
        color: white;
        }
        </style>
</head>

<body>
    <%- include('partials/header') %>
    <div class="page-wrapper chiller-theme toggled">
        <a id="show-sidebar" class="btn btn-sm btn-dark" href="#">
            <i class="fas fa-bars"></i>
        </a>
        <%- include('partials/sidebarAdmin') %>
        <!-- sidebar-wrapper  -->
        <main class="page-content">
            <div class="container">
                <div class="container mt-5">
                    <h1 style="color: bisque;">Quiz</h1>

                    <div class="row">
                        <div class="col-sm-8">
                            <div class="card">
                                <div class="card-body">


                                    <form action="/showQuiz" method="POST">
                                        <div class="form-group">
                                            <label for="courseName" style="font-size: medium;">Choose your course</label>
                                            <input type="text"list="courseName" name="courseName">

                                            <datalist id="courseName">
                                                <option value="Physics">
                                                <option value="Chemistry">
                                                <option value="Maths">
                                                <option value="Biology">
                                                <option value="English">
                                            </datalist>
                                        </div>
                                        <button type="submit" style="color: bisque; font-size: medium;" class="btn btn-dark">Enter</button>

                                    </form>

                                </div>
                            </div>
                        </div>



                    </div>
                </div>

            </div>

        </main>
        <!-- page-content" -->
    </div>
    <!-- page-wrapper -->
    <script type='text/javascript' src='https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js'></script>
    <script type='text/javascript' src='/js/dashboard.js'></script>
</body>

</html>